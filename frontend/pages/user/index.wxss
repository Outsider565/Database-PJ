/* miniprogram/pages/mine/mine.wxss */
page{
  background-color: #eeeeee;
}

.headerCard{
  margin-top: 3%;
  margin-bottom: 15px;
  background-color: white;
  height: fit-content;
  width: 92vw;
  padding-bottom: 20px;
  margin-inline: 4vw;
  border-radius: 20px;
  box-shadow: 0 8px 12px #cccccc;
}

.bodyCard{
  margin-top: 3%;
  margin-bottom: 10px;
  background-color: white;
  height: 180px;
  width: 92vw;
  margin-inline: 4vw;
  border-radius: 20px;
  box-shadow: 0 8px 12px #cccccc;
}

.userImgContainer{
  height: 80px;
  width: 80px;
  margin-top: 22px;
  margin-left: 20px;
  display: block;
  float: left;
}

.userImgCover{
  position: absolute;
  width: 80px;
  height: 80px;
  border-radius: 50%;
  z-index: 100;
}

.userImg{
  position: absolute;
  width: 80px;
  height: 80px;
  border-radius: 50%;
}

.userName{
  text-align: left;
  border:black;
  font-size: 18px;
  font-family: sans-serif;
  font-weight: bold;
  padding: 10px;
}

.Btn{
  display: flex;
  justify-content: center;
  margin-top: 15px;
  width: 500rpx;
  margin-left: 100rpx;
}

.LoginHelpText{
  font-size: 40rpx;
  line-height: 60rpx;
  margin-top: 35px;
}

.IconContianer{
  display: flex;
  height: 25px;
  padding-top: 10px;
}

.Icon{
  margin: 5px;
}

.IconText{
  font-family: sans-serif;
  font-size: 30rpx;
  display: inline-flexbox;
  line-height: 25px;
  color: #222f3e;
}

.infoContainer{
  margin-top: 2%;
}

.studyLen{
  display: flex;
  font-family: Georgia, 'Times New Roman', Times, serif;
  font-family: 'ZCOOL_h', cursive;
  justify-content: center;
  margin-top: 20px;
  font-size: large;
}

.selectCellGroup{
  padding-top: 15px;
  border-radius: 20px;
}
