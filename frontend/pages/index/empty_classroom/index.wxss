/* pages/index/empty_classroom/index.wxss */
page{
  margin: 0;
  padding: 0;
  background-color: #eeeeee;
}

.headerCard{
  margin-top: 4%;
  margin-bottom: 15px;
  padding-top: 10px;
  background-color: white;
  height: auto;
  width: 92vw;
  margin-inline: 4vw;
  border-radius: 20px;
  box-shadow: 0 3px 6px #cccccc;
}

.bodyCard{
  margin-top: 3%;
  margin-bottom: 15px;
  background-color: white;
  height: auto;
  padding-top: 5px;
  padding-bottom: 20px;
  width: 92vw;
  margin-inline: 4vw;
  border-radius: 20px;
  box-shadow: 0 3px 6px #cccccc;
}

.Btn{
  margin: 15px;
}

.tagContainer{
  margin-top: 10px;
  padding: 2px;
  margin-left: 20rpx;
  width: 650rpx
}

.tags{
  display: flex;
  font-size: 15px!important;
  font-weight: bold!important;
  justify-content: center;
  margin-inline: 7px;
  margin-bottom: 12px;
}

.htags{
  display: flex;
  font-size: 15px!important;
  font-weight: bold!important;
  justify-content: center;
  margin-inline: 3px;
  margin-bottom: 12px;
}

.headtags{
  font-size: 16px!important;
}

.footer{
  height: 80px;
}

.space{
  height: 15px;
}

.empInfoText{
  display: flex;
  justify-content: center;
  align-content: center;
  font-family: 'ZCOOL_h';
  font-size: 22px;
  padding: 10px;
  border-bottom: .5px solid #eeeeee;
  margin-bottom: 3px;
}

.headRowContainer{
  margin-bottom: 15px;
}

.headLabel{
  color: black;
  font-size: 16px;
  height: 35px;
  line-height: 35px;
  font-weight: bold;
  margin-left: 20px;
}

/*scroll-view本身*/
.scroll-view_H{
  white-space: nowrap;
  height: 35px;
  width: 520rpx;
  margin-left: 5px;
}
/*scroll-view内层*/
.scroll-view_wapper{
  white-space: nowrap;
  display: inline-block;
}

.radio{
  display:inline-block;
  margin-inline: 1px
}

.cellClass{
  border-radius: 10px;
  overflow: hidden;
}

.cellTitleClass{
  margin-left: 5px;
  color: black;
  display: flex;
  justify-content: left;
  font-weight: bold
}

.cellValueClass{
  margin-right: 5px;
  color: gray;
}
